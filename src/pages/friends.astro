---
import { kFriendLinks, kSiteOwner } from "$consts";
import BlogPostLayout from "$layouts/BlogPostLayout.astro";
---

<BlogPostLayout
  id="friends"
  title="友链"
  description={`${kSiteOwner} 的朋友们.`}
  date={new Date("2025-12-21")}
>
  <main class="not-prose mt-8">
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      {
        kFriendLinks.map((link) => (
          <a 
            href={link.url} 
            target="_blank" 
            class="group block p-4 no-underline rounded-lg border border-zinc-200 bg-white hover:bg-zinc-50 hover:border-zinc-300 dark:bg-zinc-900 dark:border-zinc-800 dark:hover:border-zinc-700 transition-all duration-200"
          >
            <div class="flex flex-col gap-1">
              <span class="font-bold text-zinc-900 dark:text-zinc-100 group-hover:text-blue-600 dark:group-hover:text-blue-400">
                {link.name}
              </span>
              <p class="text-sm text-zinc-500 dark:text-zinc-400 m-0">
                {link.desc}
              </p>
            </div>
          </a>
        ))
      }
    </div>
  </main>
</BlogPostLayout>